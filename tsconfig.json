{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    // "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "noImplicitAny": true,
    "paths": {
      "vph/*": ["./vph/*"],
      "type/*": ["./type"]
    },
    "sourceMap": true,
    "sourceRoot": "."
  },
  "exclude": ["node_modules"],
  "include": ["./vph/**/*"]
}
